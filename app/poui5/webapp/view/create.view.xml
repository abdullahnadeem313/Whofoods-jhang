<mvc:View
    xmlns:core="sap.ui.core"
    controllerName="ns.poui5.controller.create"
    class="sapUiSizeCompact"
    xmlns:form="sap.ui.layout.form"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
    <Page
        id="page"
        title="{i18n>title}"
        showNavButton="true"
        navButtonPress=".onNavBack"
    >
        <ObjectHeader
            responsive="true"
            fullScreenOptimized="true"
            title="Purchase Order"
            id="headerTitle"
        />
        <Button
            id="clickMe"
            press="onPressClickMe"
            text="Click Me"
            class="sapUiResponsiveMargin"
        />
        <!-- <Page
            class="sapUiResponsiveContentPadding"
            showHeader="false"
        > -->
        <Panel
            id="productDetailsPanel"
            class="sapUiResponsiveMargin"
            width="auto"
        >
            <form:SimpleForm
                ariaLabelledBy="objectPageTitle"
                editable="false"
                id="objectPage"
                layout="ResponsiveGridLayout"
            >
                <Label
                    labelFor="poid"
                    text="Purchase Document Number"
                />
                <!-- <Text text="{EBELN}" /> -->
                <Input
                    id="poid"
                    editable="true"
                    width="20rem"
                    valueLiveUpdate="true"
                />
                <Label
                    labelFor="bpid"
                    text="Business Partner ID"
                />
                <Select
                    id="bpid"
                    items='{ path: "/POVendor" }'
                    width="20rem"
                >
                    <core:Item
                        key="{ PARTNER_PARTNER }"
                        text="{PARTNER/NAME}"
                    />
                </Select>
            </form:SimpleForm>
        </Panel>
        <Panel
            id="productItemsPanel"
            class="sapUiResponsiveMargin"
            width="auto"
        >
            <Table
                growing="true"
                id="poItemTable"
                mode="MultiSelect"
            >
                <headerToolbar>
                    <Toolbar>
                        <Title
                            level="H1"
                            text="Purchase Order Items"
                        />
                        <ToolbarSpacer />
                        <Button
                            icon="sap-icon://add"
                            id="create"
                            press="onAddItems"
                            text="Add"
                        />
                        <Button
                            icon="sap-icon://delete"
                            id="delete"
                            press="onDeleteItems"
                            text="Delete"
                        />
                    </Toolbar>
                </headerToolbar>
                <columns>
                    <Column>
                        <header>
                            <Text text="{i18n>itemNumber}" />
                        </header>
                    </Column>
                    <Column minScreenWidth="Desktop">
                        <header>
                            <Text text="{i18n>plantID}" />
                        </header>
                    </Column>
                    <Column minScreenWidth="Desktop">
                        <header>
                            <Text text="{i18n>rawMaterialID}" />
                        </header>
                    </Column>
                    <Column
                        hAlign="Right"
                        minScreenWidth="Desktop"
                        demandPopin="true"
                    >
                        <header>
                            <Text text="{i18n>poQuantity}" />
                        </header>
                    </Column>
                </columns>
                <items />
            </Table>
        </Panel>
        <!-- </Page> -->
        <footer >
            <OverflowToolbar >
                <ToolbarSpacer />
                <Button
                    id="saveBtn"
                    text="Save"
                    type="Emphasized"
                    class="sapUiTinyMargin"
                >
                    <layoutData>
                        <OverflowToolbarLayoutData
                            closeOverflowOnInteraction="true"
                        />
                    </layoutData>
                </Button>
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>
