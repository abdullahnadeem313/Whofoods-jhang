<mvc:View
    controllerName="ns.poui5.controller.poListReport"
    class="sapUiSizeCompact"
    xmlns:form="sap.ui.layout.form"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    displayBlock="true"
    xmlns="sap.m"
>
    <Page
        id="page"
        title="{i18n>title}"
        showNavButton="true"
        navButtonPress=".onNavBack"
    >
        <ObjectHeader
            responsive="true"
            fullScreenOptimized="true"
            title="{i18n>purchaseOrder}"
            id="headerTitle"
        />
               <FlexBox
            alignItems="Start"
            justifyContent="End"
            class="sapUiResponsiveMargin"
        >
            <Button
                id="clickMe"
                press="onPressClickMe"
                text="{i18n>clickMe}"
            />
        </FlexBox>

        <!-- <Page
            class="sapUiResponsiveContentPadding"
            showHeader="false"
        > -->
        <Panel
            id="productDetailsPanel"
            class="sapUiResponsiveMargin"
            width="auto"
        >
            <form:SimpleForm
                ariaLabelledBy="objectPageTitle"
                editable="false"
                id="objectPage"
                layout="ResponsiveGridLayout"
            >
                <Label text="{i18n>purchaseDocumentNumber}" />
                <Text
                    id="poid"
                    text=""
                />
                <!-- <Input
                    id="poid"
                    editable="true"
                    width="20rem"
                    valueLiveUpdate="true"
                /> -->
                <Label
                    labelFor="bpid"
                    text="{i18n>businessPartnerID}"
                />
                <ComboBox
                    id="bpid"
                    items='{ path: "/POVendor" }'
                    width="20rem"
                >
                    <core:Item
                        key="{PARTNER_PARTNER}"
                        text="{PARTNER/NAME}"
                    />
                </ComboBox>
            </form:SimpleForm>
        </Panel>
        <Panel
            id="productItemsPanel"
            class="sapUiResponsiveMargin"
            width="auto"
        >
            <Table
                growing="true"
                growingThreshold="10"
                id="poItemTable"
                mode="MultiSelect"
            >
                <headerToolbar>
                    <Toolbar>
                        <Title
                            level="H1"
                            text="{i18n>purchaseOrderItems}"
                        />
                        <ToolbarSpacer />
                        <Button
                            icon="sap-icon://add"
                            id="create"
                            press="onAddItems"
                            text="{i18n>add}"
                        />
                        <Button
                            icon="sap-icon://delete"
                            id="delete"
                            press="onDeleteItems"
                            text="{i18n>delete}"
                        />
                    </Toolbar>
                </headerToolbar>
                <columns>
                    <Column>
                        <header>
                            <Text text="{i18n>itemNumber}" />
                        </header>
                    </Column>
                    <Column minScreenWidth="Desktop">
                        <header>
                            <Text text="{i18n>plantID}" />
                        </header>
                    </Column>
                    <Column minScreenWidth="Desktop">
                        <header>
                            <Text text="{i18n>rawMaterialID}" />
                        </header>
                    </Column>
                    <Column
                        minScreenWidth="Desktop"
                        demandPopin="true"
                    >
                        <header>
                            <Text text="{i18n>poQuantity}" />
                        </header>
                    </Column>
                </columns>
                <items />
            </Table>
        </Panel>
        <!-- </Page> -->
        <footer>
            <OverflowToolbar>
                <ToolbarSpacer />
                <Button
                    id="saveBtn"
                    text="{i18n>save}"
                    type="Emphasized"
                    press="onPressSaveBtn"
                />
                <Button
                    id="cancelBtn"
                    text="{i18n>cancel}"
                    class="sapUiTinyMargin"
                    press="onPressCancelBtn"
                >
                    <layoutData>
                        <OverflowToolbarLayoutData
                            closeOverflowOnInteraction="true"
                        />
                    </layoutData>
                </Button>
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>
