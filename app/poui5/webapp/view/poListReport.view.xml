<mvc:View
    controllerName="ns.poui5.controller.poListReport"
    class="sapUiSizeCompact"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
    <Page
        id="page"
        title="{i18n>title}"
        titleAlignment="Auto"
    >
        <content>
            <Table
                growing="true"
                class="sapUiResponsiveMargin"
                width="auto"
                id="PurchaseOrderListID"
                items="{path : '/PO_Head', 
                    sorter : {
                        path : 'EBELN' ,
                        group : false
                    }	,
                parameters: { 
                    $expand : { 
                        items : {
							$select : ['EBELP', 'MATNR_MATNR',
								'WERKS_WERKS','MENGE','UOM']
						}},
						$select : ['ID', 'PARTNER_PARTNER', 'EBELN'] ,
						$$ownRequest : true
					}}"
                mode="MultiSelect"
            >
                <headerToolbar>
                    <Toolbar>
                        <Title
                            level="H1"
                            text="Purchase Orders"
                        />
                        <ToolbarSpacer />
                        <SearchField
                            width="50%"
                            search=".onFilterProducts"
                        />
                        <Button
                            id="create"
                            press="onCreateOrder"
                            text="Create"
                            tooltip="Create Purchase Order"
                        />
                        <Button
                            id="delete"
                            press="onDeleteOrder"
                            text="Delete"
                            tooltip="Delete Purchase Order"
                        />
                    </Toolbar>
                </headerToolbar>
                <columns>
                    <Column>
                        <header>
                            <Text text="{i18n>purchaseOrderNumber}" />
                        </header>
                    </Column>
                    <Column minScreenWidth="Desktop">
                        <header>
                            <Text text="{i18n>bussinesPartnerName}" />
                        </header>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem
                        type="Navigation"
                        press="onNavToDetails"
                    >
                        <cells>
                            <Text text="{EBELN}" />
                            <ObjectIdentifier
                                title="{PARTNER_PARTNER}"
                                text="{PARTNER/NAME}"
                            />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
