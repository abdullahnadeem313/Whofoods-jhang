<mvc:View
    controllerName="ns.poui5.controller.poObjectPage"
    class="sapUiSizeCompact"
    xmlns:form="sap.ui.layout.form"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
    <Page
        id="page"
        title="{i18n>title}"
        showNavButton="true"
        navButtonPress=".onNavBack"
    >
        <ObjectHeader
            responsive="true"
            fullScreenOptimized="true"
            title="Purchase Order Number: {EBELN}"
            id="headerTitle"
        />
        <Button
            id="clickMe"
            press="onPressClickMe"
            text="Click Me"
            class="sapUiResponsiveMargin"
        />
        <Page
            class="sapUiResponsiveContentPadding"
            showHeader="false"
        >
            <form:SimpleForm
                ariaLabelledBy="objectPageTitle"
                editable="false"
                id="objectPage"
                layout="ResponsiveGridLayout"
            >
                <Label
                    labelFor="poid"
                    text="Purchase Document Number"
                />
                <Text text="{EBELN}" />
                <!-- <Input
                    id="poid"
                    editable="false"
                    width="50%"
                    value="{EBELN}"
                /> -->
                <Label
                    labelFor="bpid"
                    text="Business Partner ID"
                />
                <!-- <ObjectIdentifier text="{PARTNER_PARTNER} ({PARTNER/NAME})"></ObjectIdentifier> -->
                <Text text="{PARTNER_PARTNER} ({PARTNER/NAME})" />
                <!-- <Input
                    id="bpid"
                    editable="false"
                    width="50%"
                    value="{PARTNER_PARTNER}"
                /> -->
            </form:SimpleForm>

            <Table
                growing="true"
                id="PurchaseOrderDetail"
                items='{items}'
                mode="MultiSelect"
            >
                <headerToolbar>
                    <Toolbar>
                        <Title
                            level="H1"
                            text="Purchase Order Items"
                        />
                        <ToolbarSpacer />
                        <Button
                            icon="sap-icon://add"
                            id="create"
                            press="onCreateOrder"
                            text="Add"
                            tooltip="Create Purchase Order"
                        />
                        <Button
                            icon="sap-icon://delete"
                            id="delete"
                            press="onDeleteOrder"
                            text="Delete"
                            tooltip="Delete Purchase Order"
                        />
                    </Toolbar>
                </headerToolbar>
                <columns>
                    <Column>
                        <header>
                            <Text text="{i18n>itemNumber}" />
                        </header>
                    </Column>
                    <Column minScreenWidth="Desktop">
                        <header>
                            <Text text="{i18n>plantID}" />
                        </header>
                    </Column>
                    <Column minScreenWidth="Desktop">
                        <header>
                            <Text text="{i18n>rawMaterialID}" />
                        </header>
                    </Column>
                    <Column
                        hAlign="Right"
                        minScreenWidth="Desktop"
                    >
                        <header>
                            <Text text="{i18n>poQuantity}" />
                        </header>
                    </Column>
                    <!-- <Column minScreenWidth="Desktop">
                        <header>
                            <Text text="{i18n>unitOfMeasure}" />
                        </header>
                    </Column> -->
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{EBELP}" />
                            <ObjectIdentifier
                                title="{WERKS_WERKS}"
                                text="{WERKS/NAME1}"
                            />
                            <ObjectIdentifier
                                title="{MATNR_MATNR}"
                                text="{MATNR/MAKTX}"
                            />
                            <Text text="{path: 'MENGE', formatter: '.formatQuantity'} {UOM}" />
                            <!-- <Text text="{UOM}" /> -->
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </Page>
    </Page>
</mvc:View>
