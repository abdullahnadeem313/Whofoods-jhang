<mvc:View
    controllerName="ns.poui5.controller.poObjectPage"
    class="sapUiSizeCompact"
    xmlns:form="sap.ui.layout.form"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
    <Page
        id="page"
        title="{i18n>title}"
        showNavButton="true"
        navButtonPress=".onNavBack"
    >
        <ObjectHeader
            responsive="true"
            fullScreenOptimized="true"
            title="Purchase Order Number: {EBELN}"
            id="headerTitle"
        />

        <FlexBox
            alignItems="Start"
            justifyContent="End"
            class="sapUiResponsiveMargin"
        >
            <Button
                id="clickMe"
                press="onPressClickMe"
                text="{i18n>clickMe}"
                class="sapUiSmallMarginEnd"
            />
            <Button
                id="EDIT"
                press="onPressEdit"
                text="{i18n>Edit}"
                type="Emphasized"
            />
        </FlexBox>
        <Panel
            id="productDetailsPanel"
            class="sapUiResponsiveMargin"
            width="auto"
        >
            <form:SimpleForm
                ariaLabelledBy="objectPageTitle"
                editable="false"
                id="objectPage"
                layout="ResponsiveGridLayout"
            >
                <Label
                    labelFor="poid"
                    text="Purchase Document Number"
                />
                <Text text="{EBELN}" />
                <!-- <Input
                    id="poid"
                    editable="false"
                    width="50%"
                    value="{EBELN}"
                /> -->
                <Label
                    labelFor="bpid"
                    text="Business Partner ID"
                />
                <!-- <ObjectIdentifier text="{PARTNER_PARTNER} ({PARTNER/NAME})"></ObjectIdentifier> -->
                <Text text="{PARTNER_PARTNER} ({PARTNER/NAME})" />
                <!-- <Input
                    id="bpid"
                    editable="false"
                    width="50%"
                    value="{PARTNER_PARTNER}"
                /> -->
            </form:SimpleForm>
        </Panel>
        <Panel
            id="productItemsPanel"
            class="sapUiResponsiveMargin"
            width="auto"
        >
            <Table
                growing="true"
                id="PurchaseOrderDetail"
                items='{items}'
            >
                <headerToolbar>
                    <Toolbar>
                        <Title
                            level="H1"
                            text="Purchase Order Items"
                        />
                        <ToolbarSpacer />
                        <Button
                            icon="sap-icon://add"
                            id="create"
                            press="onCreateOrder"
                            text="Add"
                            tooltip="Create Purchase Order"
                            enabled="false"
                        />
                        <Button
                            icon="sap-icon://delete"
                            id="delete"
                            press="onDeleteOrder"
                            text="Delete"
                            tooltip="Delete Purchase Order"
                            enabled="false"
                        />
                    </Toolbar>
                </headerToolbar>
                <columns>
                    <Column>
                        <header>
                            <Text text="{i18n>itemNumber}" />
                        </header>
                    </Column>
                    <Column minScreenWidth="Desktop">
                        <header>
                            <Text text="{i18n>plantID}" />
                        </header>
                    </Column>
                    <Column minScreenWidth="Desktop">
                        <header>
                            <Text text="{i18n>rawMaterialID}" />
                        </header>
                    </Column>
                    <Column
                        hAlign="Right"
                        minScreenWidth="Desktop"
                        demandPopin="true"
                    >
                        <header>
                            <Text text="{i18n>poQuantity}" />
                        </header>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{EBELP}" />
                            <ObjectIdentifier
                                title="{WERKS_WERKS}"
                                text="{WERKS/NAME1}"
                            />
                            <ObjectIdentifier
                                title="{MATNR_MATNR}"
                                text="{MATNR/MAKTX}"
                            />
                            <!-- <Text text="{path: 'MENGE', formatter: '.formatQuantity'} {UOM}" /> -->
                            <ObjectNumber
                                id="uomID"
                                number="{
                                path: 'MENGE',
                                type: 'sap.ui.model.type.Float',
                                formatOptions: {
                                    minFractionDigits:2
                                }
                            }"
                                unit="{MATNR/UOM}"
                                emphasized="false"
                            />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </Panel>
    </Page>
</mvc:View>
